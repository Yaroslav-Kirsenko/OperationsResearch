<Window x:Class="OperationsResearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OperationsResearch"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" Width="850"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Background="#FFF0F4F8">

    <Grid Margin="10">
        <!-- Приветственное сообщение -->
        <Label Content="Привіт, я твій помічник!" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Top" 
               FontSize="36" 
               Foreground="#FF333333"
               Margin="0,50,0,0"/>

        <!-- Кнопка для выбора метода -->
        <Button Content="Двоїстий симплекс метод" 
                HorizontalAlignment="Center" 
                Margin="0,150,0,0" 
                VerticalAlignment="Top" 
                Width="600" 
                Height="50" 
                Click="Button_Click_Dual" 
                Background="#FF56C596" 
                Foreground="White" 
                FontSize="20"
                FontWeight="Bold"
                BorderThickness="0"
                ToolTip="Перейти к двоїстому симплекс методу"/>
    </Grid>
</Window>
