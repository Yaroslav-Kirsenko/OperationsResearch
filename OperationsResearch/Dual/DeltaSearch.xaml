<Window x:Class="OperationsResearch.Dual.DeltaSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OperationsResearch.Dual"
        mc:Ignorable="d"
        Title="DeltaSearch" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">

    <Grid Margin="0,0,0,0"  Background="#FFD9FFFE">
        <Button Content="Повернутись назад" HorizontalAlignment="Left" Margin="2,7,0,0" VerticalAlignment="Top" Width="113" Height="22" Click="Button_Click_Exit" Background="#FFABFFEE" Grid.ColumnSpan="2"/>

        <!-- Сетка для размещения элементов внутри окна -->
        <Grid>
            <!-- Определение строк. Первая строка для основной таблицы, вторая строка для Z-функции, третья для кнопки "Далі" -->
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <!-- Растягивается в зависимости от размера окна -->
                <RowDefinition Height="Auto" />

            </Grid.RowDefinitions>

            <!-- Контейнер для основной таблицы -->
            <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5">
                <!-- Уменьшил Margin -->
                <Grid x:Name="textBoxContainer" 
                  HorizontalAlignment="Stretch" 
                  VerticalAlignment="Top"
                  ShowGridLines="True"
                  Width="Auto"
                  Height="Auto"/>
            </Grid>

            <!-- Кнопка "Далі" внизу -->
            <Button Grid.Row="1" Content="Вирішити" HorizontalAlignment="Center" VerticalAlignment="Top" Width="800" Height="32" Click="Button_Click_Result" Background="#FFABFFEE" Margin="0,66,0,0"/>
            <Button Grid.Row="1" Content="Далі" HorizontalAlignment="Center" VerticalAlignment="Top" Width="800" Height="34" Click="Button_Click_Next" Background="#FFABFFEE" Margin="0,98,0,0"/>
        </Grid>
    </Grid>
</Window>
